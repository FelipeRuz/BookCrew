{% extends "BcBundle::layout.html.twig" %}
{% block content %}
    <br>
    <div class="container bg-info">
        <br>
        <div class="row">
            {% if app.user.rol == 'ADMIN' %}
                <div class="col-md-6">
                    <a href="{{path("bc_add_autor")}}"><input type="button" value="Inscribir autor" class="btn btn-warning"></a>
                </div>
            {% endif %}
            <div class="col-md-6">
                <a href=""><input type="button" value="Buscar" class="btn btn-warning"></a>
            </div>
        </div>
        <br>
    </div>
    <br>
    {% if app.user != null %} 
        {% if app.user.rol != null %}
            {% for listLibAutor in listLibAutors %}
                <div id="tupla_autor" class="container bg-warning">
                    <br>
                    <div class="row">
                        <div class="col-md-3 text-center">
                            {% if autor.foto == null or autor.foto == "" %} 
                                <img src="smile.png" height="60%" width="80%"> 
                            {% else %}
                                <img src="autor.foto" height="60%" width="80%">
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <br>
                            <h2>
                                <i class="fas fa-user"></i> {{autor.nombre}} {{autor.apellido}}
                            </h2>
                            <br>
                        </div>
                    </div>
                    <br>
                </div>
                <br>
            {% endfor %}
        {% else %}
            <div class="container bg-danger">
                <div class="row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-5" align="center">
                        <br><br>
                        <h1>¡Alto ahí, no tienes los permisos necesarios para acceder a esta sección!</h1>
                        <br><br>
                    </div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="container bg-danger">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5" align="center">
                    <br><br>
                    <h1>¡Alto ahí, forastero! ¡Debes inscribirte primero para entrar a esta sección!</h1>
                    <br><br>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block javascript %}
    <script src="{{ asset('assets/js/function.js') }}" type="text/javascript"></script>
    <script>
        $("#MenuUser").toggle();
        $("#titleUser").click(function () {
            $("#MenuUser").toggle();
        });
    </script>
{% endblock %}