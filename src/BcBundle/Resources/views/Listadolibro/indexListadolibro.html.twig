{% extends "BcBundle::layout.html.twig" %}
{% block content %}
    <br>
    <div class="container bg-info">
        <br>
        <div class="row">
            <div class="col-md-6">
                <h2><b><i class="fas fa-check"></i> Mi lista</b></h2>    
            </div>
            <div class="col-md-6">
                <!--<a href=""><input type="button" value="Buscar" class="btn btn-warning"></a>-->
            </div>
        </div>
        <br>
    </div>
    <br>
    {% if app.user != null %} 
        {% if app.user.rol != null %}
            {% for listado in listados %}
                {% if app.user.idUsuario == listado.id_usuario %}
                    <div class="container bg-warning">
                        <br>
                        <div class="row">
                            <div class="col-md-6">
                                <h2>
                                    <i class="fas fa-arrow-alt-circle-right"></i> {{listado.titulo}}
                                </h2>
                            </div>
                            <br>
                            <div class="col-md-6 text-center">
                                <br>
                                <a href=""><i class="fas fa-trash" style="font-size: 250%"></i></a>
                            </div>
                        </div>
                        <br>
                    </div>
                {% elseif listado == null or listado == "" %}
                    <div class="container bg-warning">
                        <br>
                        <div class="row">
                            <div class="col-md-6 text-center">
                                <h2>
                                    <b>¡Vaya, ha habido un error! Vuelve a intentarlo mas tarde</b>
                                </h2>
                            </div>
                        </div>
                        <br>
                    </div>
                {% endif %}
                <br><br>     
            {% endfor %}
        {% else %}
            <div class="container bg-danger">
                <div class="row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-5" align="center">
                        <br><br>
                        <h1>¡Alto ahí, forastero! ¡Debes inscribirte primero para entrar a esta sección!</h1>
                        <br><br>
                    </div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="container bg-danger">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5" align="center">
                    <br><br>
                    <h1>¡Alto ahí, forastero! ¡Debes inscribirte primero para entrar a esta sección!</h1>
                    <br><br>
                </div>
            </div>
        </div>
    {% endif %}

    {% block javascript %}
        <script>
            $(document).ready(function () {
                $("titulolibro").click(function () {
                    $("cuerpoLibro").toggle(1000);
                });
            });
        </script>
    {% endblock %}
{% endblock %}

