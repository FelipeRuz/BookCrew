{% extends "BcBundle::layout.html.twig" %}
{% block content %}
    {% if app.user != null %} 
        {% if app.user.rol != null %}
            <br>
            <div class="container bg-dark">
                <br>
                <div class="row">
                    <div class="col-md-6">
                        <a href="{{path("bc_add_libreria")}}">
                            <img src="{{asset("imgdata/libreria-add.png")}}" height="50" width="50">
                            <input type="button" value="Añadir libreria" class="btn btn-success"></a>
                    </div>
                    {% if app.user.rol != null %}
                        {% if app.user.rol == 'ADMIN' %}
                            <div class="col-md-3">
                                <a href="{{path("bc_edit_libreria",{"id":libreria.idLibreria})}}">
                                    <img src="{{asset("imgdata/libreria-edit.png")}}" height="50" width="50">
                                    <input type="button" value="Editar libreria" class="btn btn-warning"></a>
                                </a>
                            </div>
                            <br>
                            <div class="col-md-3">
                                <a onclick="confirmarBorradoLibreria({{libreria.idLibreria}})">
                                    <img src="{{asset("imgdata/libreria-del.png")}}" height="50" width="50">
                                    <input type="button" value="Eliminar libreria" class="btn btn-danger"></a>
                                </a>
                            </div>
                        {% endif %}   
                    {% endif %}
                </div>
                <br>
            </div>
            <br>
            <div class="container bg-info">
                <br>      
                <br>
            </div>
            <br>
            <div class="container bg-warning">
                <br>
                <div class="row">
                    <div class="col-md-12">
                        <h2><i class="fas fa-arrow-alt-circle-right"></i><b>{{libreria.nombre}}</b></h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <h2>
                            {% if app.user.rol == 'ADMIN' %} 
                                <br><br>
                                <div class="col-md-2"></div>
                                <!--<div class="col-md-3">
                                    <a href="{{path("bc_edit_libreria",{"id":libreria.idLibreria})}}">
                                        <img src="{{asset("imgdata/libro-edit.png")}}" height="50" width="50">
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{path("bc_delete_libreria",{"id":libreria.idLibreria})}}">
                                        <img src="{{asset("imgdata/libro-del.png")}}" height="50" width="50">
                                    </a>
                                </div>-->
                            {% endif %} 
                        </h2>
                    </div>    
                    <div class="col-md-9">
                        <table style="width: 75%">
                            <h6><b></b>
                                <tr>
                                    <td><b>Nif : </b>{{libreria.nif}}</td>
                                    <td><b></b></td>
                                </tr>
                                <tr>
                                    <td><b>Tlf : </b>{{libreria.tlf}}</td>
                                    <td><b>Email : </b>{{libreria.email}}</td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Direccion :</b> {{libreria.direccion}};<br> {{libreria.poblacion}}/{{libreria.provincia}}
                                    </td>
                                    <td>
                                        {% if libreria.ubicacion == "" or libreria.ubicacion == null %}
                                            <b> Web : </b> <a href="{{ libreria.web }}"><i class="fas fa-link"></i> {{libreria.nombre}}</a>
                                        {% else %}
                                            <b> Ubicación :</b>  <a href="{{libreria.ubicacion}}" target="_blank"><i class="far fa-map"></i> Ubicación</a><br>
                                            <b> Web : </b> <a href="{{ libreria.web }}" target="_blank"><i class="fas fa-link"></i> {{libreria.nombre}} </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            </h6>
                        </table>
                        <br>
                        <br>
                    </div>
                </div>
                <br>
            </div>
            <br>
        {% else %}
            <div class="container bg-danger">
                <div class="row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-5" align="center">
                        <br><br>
                        <h1>¡Alto ahí, forastero! ¡Debes inscribirte primero para entrar a esta sección!</h1>
                        <br><br>
                    </div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="container bg-danger">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5" align="center">
                    <br><br>
                    <h1>¡Alto ahí, forastero! ¡Debes inscribirte primero para entrar a esta sección!</h1>
                    <br><br>
                </div>
            </div>
        </div>
    {% endif %}
    <br>
{% endblock %}
{% block javascript %}
    <script src="{{ asset('assets/js/function.js') }}" type="text/javascript"></script>
    <script>
                                    $("#MenuUser").toggle();
                                    $("#titleUser").click(function () {
                                        $("#MenuUser").toggle();
                                    });
    </script>
{% endblock %}
