{% extends "BcBundle::layout.html.twig" %}
{% block content %}
    {% if app.user == null %}
        <!--LOGIN-->
        <br>
        <div class="container bg-warning">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5">
                    <br>
                    <h2 id="titleSesion">
                        <img src="{{asset("imgdata/user-base.png")}}" height="50" width="50">
                        Identificación 
                    </h2>
                    <span id="logSesion">
                        <form action="{{path("login_check")}}" method="post">
                            <br>
                            <label><b>Email del usuario</b></label>
                            <input type="name" id="email" name="_username" value="{{ last_username }}" class="form-control"/>
                            <br>
                            <label><b>Contraseña</b></label>
                            <input type="password" id="password" name="_password" class="form-control"/>
                            <br>
                            <input type="submit" value="Entrar" class="btn btn-success">
                            <input type="button" value="Cancelar" class="btn btn-danger">
                            <input type="hidden" name="_target_path" value="/login"/>
                        </form>
                    </span>
                </div>
            </div>
            <br>
        </div>
        <!-- CREACION DE USUARIO -->
        <br>        
        <div  class="container bg-warning">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-5">
                    <br>
                    <h2 id="reg">
                        <img src="{{asset("imgdata/user-add.png")}}" height="50" width="50">
                        Registro de usuario 
                    </h2>
                    <br>
                    <span id="add">
                        {% for message in app.session.flashbag().get('status') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {{form_start(form, {'action':'', 'method':'POST'})}}
                        {{(form_end(form))}}
                    </span>
                </div>
            </div>
            <br>
        </div>
    {% else %}
        <br> 
        <!-- MENU PRINCIPAL -->
        <div  class="container bg-warning">
            <div class="row"> 
                <div class="col-md-12 text-center">
                    <br>
                    <h2 id="menu_princ"><b> Menú </b></h2>
                    <br>
                </div>
            </div>
            <span id="menuContentprinc">
                <div class="row">
                    <div class="col-md-3" align="center">
                        <a href="{{path("bc_index_libro")}}">
                            <img src="{{asset("imgdata/smile.png")}}" height="50" width="50">
                            <input type="button" value="Listado de libros" class="btn btn-info">
                        </a><br><br><br><br>
                    </div>
                    <div class="col-md-3" align="center">   
                        <a href="{{path("bc_index_libreria")}}">
                            <img src="{{asset("imgdata/smile.png")}}" height="50" width="50">
                            <input type="button" value="Listado de Librerías" class="btn btn-info">
                        </a><br><br> 
                    </div>
                    <div class="col-md-3" align="center">  
                        <a href="{{path("bc_index_autor")}}">
                            <img src="{{asset("imgdata/smile.png")}}" height="50" width="50">
                            <input type="button" value="Listado de Autores" class="btn btn-info">
                        </a><br><br>
                    </div>
                    {% if app.user.rol == 'ADMIN' %}
                        <div class="col-md-3" align="center">  
                            <a href="{{path("bc_index_usuario")}}">
                                <img src="{{asset("imgdata/smile.png")}}" height="50" width="50">
                                <input type="button" value="Listado de Usuarios" class="btn btn-danger">
                            </a><br><br>
                        </div>
                    {% endif %}
                </div>
            </span>
            <br>
        </div>
        <br>
    {% endif %}
    <br>
    <div class="clearfix"></div>
{% endblock %}
{% block javascript %}
    <script src="{{ asset('assets/js/function.js') }}" type="text/javascript"></script>
    <script>       
        $(document).ready(function () {
            $("#add").toggle();
            $("#logSesion").toggle();
            
            $("#titleSesion").click(function () {
                $("#logSesion").toggle();
            });
            $("#reg").click(function () {
                $("#add").toggle();
            });
        });
    </script>
{% endblock %}